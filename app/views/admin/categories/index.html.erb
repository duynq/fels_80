<% if logged_in? %>
  <div class="row" >
    <%= link_to t("category.new.new_category"), new_admin_category_path, class:
      "btn btn-primary" %>
    <div class="col-md=8">
      <table class="table table-striped">
        <thead>
          <tr>
            <th><%= t "category" %></th>
            <th><%= t "desciption" %></th>
            <th><%= t "tool" %></th>
          </tr>
        </thead>
        <tbody>
          <% @categories.each do |category| %>
            <tr>
              <td><%= category.name %></td>
              <td><%= category.description %></td>
              <td>
                <div class="manage_category">
                  <%= link_to t("categories.edit.edit"), edit_admin_category_path(category) %>
                  <%= link_to t("categories.destroy.delete"), admin_category_path(category),
                    method: :delete, data: {confirm: t("categories.destroy.confirm")},
                    class: "delete_category" %>
                </div>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
<% end %>
