<h3 class="pull-right text-danger" id="clock">
  <span id="hidden-data" data-time-over-msg="<%= t "lessons.show.time_over" %>"
    data-time-remaining="<%= @time_remaining %>">
  </span>
  <span class="glyphicon glyphicon-time">&nbsp</span>
  <b id="time-remaining"></b>
</h3>
<div class="row" >
  <%= form_for @lesson do |f| %>
    <%= f.hidden_field :learned, value: true %>
    <%= f.fields_for :lesson_words do |lesson_word| %>
      <%= render "word_form", f: lesson_word %>
    <% end %>
    <%= f.submit t("lessons.index.answer"), class: "btn btn-primary" %>
  <% end %>
</div>
