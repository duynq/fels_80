<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <%= link_to t("project"), root_path , id: "logo" %>
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to t("layouts.header.home"), root_path %></li>
        <li><%= link_to t("layouts.header.help"), help_path %></li>
        <% if logged_in? %>
          <li><%= link_to t("layouts.header.users"), users_path %></li>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              <%= t "layouts.header.account" %> <b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <li><%= link_to t("layouts.header.profile"), current_user %></li>
              <li><%= link_to t("layouts.header.setting"), edit_user_path(current_user) %></li>
              <li class="divider"></li>
              <li>
                <%= link_to t("layouts.header.logout"), logout_path, method: "delete" %>
              </li>
            </ul>
          </li>
          <% if current_user.admin? %>
            <li class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                <%= t "layouts.header.manage" %> <b class="caret"></b>
              </a>
              <ul class="dropdown-menu">
                <li><%= link_to t("layouts.header.users"), admin_users_path %></li>
                <li><%= link_to t("layouts.header.categories"), admin_categories_path%></li>
                <li>
                  <%= link_to t("layouts.header.words"), admin_words_path %>
                </li>
              </ul>
            </li>
          <% end %>
        <% else %>
          <li><%= link_to t("layouts.header.login"), login_path %></li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>
