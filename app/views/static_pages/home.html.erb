<% if logged_in? %>
  <div class="row" >
    <aside class="col-md-4" >
      <%= render "shared/user_infor" %>
    </aside>
    <div class="col-md-8" >
      <%= link_to t("static_pages.home.word"), words_path, class: "btn btn-lg btn-primary" %>
      <%= link_to t("static_pages.home.lesson"), current_user.admin? ? admin_categories_path : categories_path, class: "btn btn-lg btn-primary" %>
    </div>
  </div>
<% else %>
  <div class="center jumbotron">
    <h1><%= t "static_pages.home.welcome" %></h1>
    <%= link_to t("static_page.home.sign_up_now"), signup_path, class: "btn btn-lg btn-primary" %>
  </div>
<% end %>
