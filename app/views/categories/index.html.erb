<% if logged_in? %>
  <div class="row" >
    <% @categories.each do |category| %>
      <div class="col-md-8 col-md-offset-3 cate" >
        <div class="col-md-6" >
          <h2><%= category.name %></h2>
        </div>
        <div class="col-md-6" >
          <h4><%= category.name %></h4>
          <p>
            <% category.words.each do |word| %>
              <%= word.name %>
            <% end %>
          </p>
          <div>
            <%= link_to t("categories.index.start"), "#" , class: "btn btn-primary start" %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
<% else %>
  <div class="center jumbotron">
    <h1><%= t "static_pages.home.welcome" %></h1>
    <%= link_to t("static_page.home.sign_up_now"), signup_path, class: "btn btn-lg btn-primary" %>
  </div>
<% end %>
