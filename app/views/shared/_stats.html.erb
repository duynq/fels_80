<% @user ||= current_user %>
<div class="stats">
  <a href="<%= relationships_path id: @user.id, type: "following" %>">
    <strong id="following" class="stat">
      <%= @user.following.count %>
    </strong>
    <strong>
      <%= t "users.show.following" %>
    </strong>
  </a>
  <a href="<%= relationships_path id: @user.id, type: "followers" %>">
    <strong id="followers" class="stat">
      <%= @user.followers.count %>
    </strong>
    <strong>
      <%= t "users.show.followers" %>
    </strong>
  </a>
</div>
